                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="60px" />
                    </Grid.ColumnDefinitions>

                    <DataGrid ItemsSource="{Binding Person.Persons}" />

