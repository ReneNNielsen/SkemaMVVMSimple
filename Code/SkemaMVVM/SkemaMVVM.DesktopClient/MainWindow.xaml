                                <GridViewColumn DisplayMemberBinding="{Binding Path=FirstName}" HeaderContainerStyle="{StaticResource hcs}" Header="Fornavn" Width="70px"/>
                                <GridViewColumn DisplayMemberBinding="{Binding Path=LastName}" HeaderContainerStyle="{StaticResource hcs}" Header="Efternavn" Width="70px"/>
                                <GridViewColumn DisplayMemberBinding="{Binding Path=Address}" HeaderContainerStyle="{StaticResource hcs}" Header="Adresse" Width="100px"/>
                                <GridViewColumn DisplayMemberBinding="{Binding Path=ZipCode}" HeaderContainerStyle="{StaticResource hcs}" Header="Post nr." Width="50px"/>
                                <GridViewColumn DisplayMemberBinding="{Binding Path=City}" HeaderContainerStyle="{StaticResource hcs}" Header="By" Width="80px"/>
                            </GridView>
                        </ListView.View>
                    </ListView>-->
                    <StackPanel Grid.Column="1">
                        <Button Height="25px" VerticalAlignment="Top" Content="Ny lære" />
                        <Button Height="25px" VerticalAlignment="Top" Content="Redigér" />
                    </StackPanel>

                </Grid>
            </TabItem>
            <TabItem Header="Elever">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="60px" />
                    </Grid.ColumnDefinitions>

                    <ListView Grid.Column="0" ItemsSource="{Binding studentSource}" />
                    <StackPanel Grid.Column="1">
                        <Button Height="25px" VerticalAlignment="Top" Content="Ny elev" />
                        <Button Height="25px" VerticalAlignment="Top" Content="Redigér" />
                    </StackPanel>

                </Grid>
